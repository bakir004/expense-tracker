# Database Configuration
DB_HOST=localhost
DB_NAME=expense_tracker_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_PORT=5432
DB_SSL_MODE=Require

# JWT Configuration
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_at_least_32_characters_long
JWT_ISSUER=ExpenseTrackerAPI
JWT_AUDIENCE=ExpenseTrackerAPI
JWT_EXPIRY_HOURS=24

# API Configuration
API_MAX_PAGE_SIZE=100
API_DEFAULT_PAGE_SIZE=20

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000;https://+:5001
ASPNETCORE_HTTPS_PORT=5001

# Logging Configuration (Optional - Serilog can use these)
LOG_LEVEL=Information
LOG_FILE_PATH=/app/logs/app-.log
LOG_RETENTION_DAYS=30

# Security (Optional)
CORS_ALLOWED_ORIGINS=https://yourfrontend.com,https://www.yourfrontend.com
